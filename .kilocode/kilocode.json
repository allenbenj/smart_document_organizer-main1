{
  "$schema": "https://kilo.ai/config.json",

  "model": "default",

  "instructions": [
    "Before making edits, gather and summarize context.",
    "Document assumptions before applying nontrivial changes.",
    "Break large tasks into verifiable subtasks.",
    "Prefer explicit and minimal code changes.",
    "When refactoring, preserve observable behavior.",
    "Evaluate edge cases and error handling paths.",
    "Produce structured design outlines for architectural work.",
    "Think before editing.",
    "Plan before refactoring.",
    "Evaluate impact radius of every change.",
    "Prefer clarity over cleverness.",
    "Avoid introducing hidden state.",
    "Avoid silent failures.",
    "Never remove logging without reason.",
    "Validate assumptions explicitly."
  ],

  "rules": [
    ".kilocode/rules/naming-conventions.md",
    ".kilocode/rules/testing-coverage.md",
    ".kilocode/rules/security-guidelines.md"
  ],

  "permission": {
    "*": "ask",
    "read": {
      "*": "allow"
    },
    "bash": {
      "*": "ask",
      "git *": "allow"
    },
    "edit": {
      "*": "ask",
      "*.md": "allow"
    }
  },

  "agent": {
    "architect": {
      "description": "Planning and high-level design mode.",
      "instructions": [
        "Produce detailed breakdowns before modifying code.",
        "Avoid direct edits unless strictly scoped and justified."
      ],
      "permission": {
        "edit": "deny",
        "bash": "ask"
      }
    },
    "code": {
      "description": "Production code implementation mode.",
      "instructions": [
        "Write clear, readable, maintainable code.",
        "Include tests for new behavior.",
        "Explain trade-offs for non-trivial solutions."
      ],
      "permission": {
        "edit": "allow",
        "bash": "ask"
      }
    },
    "debug": {
      "description": "Diagnosis and issue isolation mode.",
      "instructions": [
        "Reproduce failures with minimal test cases.",
        "Explain root cause analysis clearly.",
        "Propose patch candidates with justification."
      ],
      "permission": {
        "edit": "ask",
        "bash": "allow"
      }
    },
    "orchestrator": {
      "description": "Multi-step coordination mode.",
      "instructions": [
        "Sequence subtasks with clear dependencies.",
        "Report progress between steps.",
        "Recover gracefully from failures."
      ],
      "permission": {
        "edit": "ask",
        "bash": "ask"
      }
    }
  }
}
