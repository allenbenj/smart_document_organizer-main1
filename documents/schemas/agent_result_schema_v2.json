{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://smart-document-organizer.local/schemas/agent_result_schema_v2.json",
  "title": "Smart Document Organizer Agent Result Schema v2",
  "description": "Versioned response schemas for agent endpoints including reasoning framework integration.",
  "type": "object",
  "$defs": {
    "envelope": {
      "type": "object",
      "required": ["success", "data", "error", "processing_time", "agent_type"],
      "properties": {
        "schema_version": { "type": "string", "const": "v2" },
        "success": { "type": "boolean" },
        "data": { "type": "object" },
        "error": { "type": ["string", "null"] },
        "processing_time": { "type": "number", "minimum": 0 },
        "agent_type": { "type": "string" },
        "metadata": { "type": "object", "additionalProperties": true },
        "warnings": {
          "type": "array",
          "items": { "type": "object", "additionalProperties": true },
          "default": []
        },
        "fallback_used": { "type": "boolean", "default": false }
      },
      "additionalProperties": true
    },
    "reasoningFramework": {
      "type": "object",
      "properties": {
        "reasoning_framework": {
          "type": "string",
          "enum": ["deductive_legal", "irac", "toulmin", "hybrid"]
        },
        "legal_principles": {
          "type": "array",
          "items": { "type": "object", "additionalProperties": true },
          "default": []
        },
        "factual_scenarios": {
          "type": "array",
          "items": { "type": "object", "additionalProperties": true },
          "default": []
        },
        "application_map": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "principle": { "type": "string" },
              "facts": { "type": "array", "items": { "type": "string" } },
              "rationale": { "type": "string" }
            },
            "required": ["principle", "facts", "rationale"],
            "additionalProperties": true
          },
          "default": []
        },
        "conclusion": {
          "type": "object",
          "properties": {
            "text": { "type": "string" },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
          },
          "required": ["text", "confidence"],
          "additionalProperties": true
        },
        "uncertainties": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "counterarguments": {
          "type": "array",
          "items": { "type": "object", "additionalProperties": true },
          "default": []
        }
      },
      "additionalProperties": true
    },
    "toulmin": {
      "type": "object",
      "properties": {
        "claim": { "type": "string" },
        "data": { "type": "string" },
        "warrant": { "type": "string" },
        "backing": { "type": "string" },
        "qualifier": { "type": "string" },
        "rebuttal": { "type": "string" },
        "completeness": { "type": "number", "minimum": 0, "maximum": 1 },
        "strength": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "required": ["claim", "data", "warrant", "backing", "qualifier", "rebuttal"],
      "additionalProperties": true
    },
    "adaDaReview": {
      "type": "object",
      "properties": {
        "detected": { "type": "boolean" },
        "employed": { "type": "boolean" },
        "analysis": { "type": "string" },
        "refutation": { "type": "string" }
      },
      "required": ["detected", "employed"],
      "additionalProperties": true
    },
    "entitiesData": {
      "type": "object",
      "required": ["entities", "total_entities"],
      "properties": {
        "entities": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["text", "type", "start", "end", "confidence"],
            "properties": {
              "text": { "type": "string" },
              "type": { "type": "string" },
              "start": { "type": "integer", "minimum": 0 },
              "end": { "type": "integer", "minimum": 0 },
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
              "context": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "total_entities": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },
    "legalData": {
      "allOf": [
        { "$ref": "#/$defs/reasoningFramework" },
        {
          "type": "object",
          "properties": {
            "issue": { "type": "string" },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
            "legal_issues": { "type": "array", "items": { "type": "object", "additionalProperties": true }, "default": [] },
            "legal_arguments": { "type": "array", "items": { "type": "object", "additionalProperties": true }, "default": [] },
            "compliance_checks": { "type": "array", "items": { "type": "object", "additionalProperties": true }, "default": [] },
            "matched_signals": { "type": "array", "items": { "type": "object", "additionalProperties": true }, "default": [] },
            "reasoning_trace": { "type": "array", "items": { "type": "object", "additionalProperties": true }, "default": [] },
            "knowledge_graph": { "type": "object", "additionalProperties": true },
            "analysis_type": { "type": "string" },
            "analysis_id": { "type": "string" },
            "toulmin": { "$ref": "#/$defs/toulmin" },
            "ada_da_review": { "$ref": "#/$defs/adaDaReview" }
          },
          "additionalProperties": true
        }
      ]
    },
    "iracData": {
      "allOf": [
        { "$ref": "#/$defs/reasoningFramework" },
        {
          "type": "object",
          "required": ["analysis"],
          "properties": {
            "analysis": {
              "type": "object",
              "required": ["issue", "rule", "application", "conclusion"],
              "properties": {
                "issue": { "type": "object", "required": ["content", "confidence"], "additionalProperties": true },
                "rule": { "type": "object", "required": ["content", "confidence"], "additionalProperties": true },
                "application": { "type": "object", "required": ["content", "confidence"], "additionalProperties": true },
                "conclusion": { "type": "object", "required": ["content", "confidence"], "additionalProperties": true }
              },
              "additionalProperties": true
            },
            "ambiguities": { "type": "array", "items": { "type": "string" }, "default": [] },
            "alternative_interpretations": { "type": "array", "items": { "type": "string" }, "default": [] },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
            "toulmin": { "$ref": "#/$defs/toulmin" },
            "ada_da_review": { "$ref": "#/$defs/adaDaReview" }
          },
          "additionalProperties": true
        }
      ]
    },
    "toulminData": {
      "allOf": [
        { "$ref": "#/$defs/toulmin" },
        {
          "type": "object",
          "properties": {
            "missing_components": { "type": "array", "items": { "type": "string" }, "default": [] },
            "improvement_suggestions": { "type": "array", "items": { "type": "string" }, "default": [] }
          },
          "additionalProperties": true
        }
      ]
    }
  },
  "oneOf": [
    {
      "allOf": [
        { "$ref": "#/$defs/envelope" },
        {
          "properties": {
            "agent_type": { "const": "entities" },
            "data": { "$ref": "#/$defs/entitiesData" }
          }
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/envelope" },
        {
          "properties": {
            "agent_type": { "const": "legal" },
            "data": { "$ref": "#/$defs/legalData" }
          }
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/envelope" },
        {
          "properties": {
            "agent_type": { "const": "irac" },
            "data": { "$ref": "#/$defs/iracData" }
          }
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/envelope" },
        {
          "properties": {
            "agent_type": { "const": "toulmin" },
            "data": { "$ref": "#/$defs/toulminData" }
          }
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/envelope" },
        {
          "properties": {
            "agent_type": { "type": "string" },
            "data": { "type": "object" }
          }
        }
      ]
    }
  ]
}
