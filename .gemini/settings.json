{
  // --- CORE GEMINI CONFIGURATION ---

  // Enables "YOLO Mode" for the Agent. 
  // WARNING: This allows Gemini to execute terminal commands (like 'npm install') 
  // without asking for your permission every single time. 
  // Great for flow, but use with caution.
  "geminicodeassist.agentYoloMode": true,

  // --- INLINE COMPLETION OPTIMIZATION ---

  // Ensures Gemini is the primary provider of inline ghost text.
  // Disable if you are fighting with GitHub Copilot.
  "editor.inlineSuggest.enabled": true,

  // Enables "Next Edit Predictions" (Preview Feature).
  // Instead of just completing the current line, Gemini tries to predict 
  // the next logical cursor move or edit you will make.
  "geminicodeassist.inlineSuggestions.nextEditPredictions": true,

  // Controls how aggressive the auto-suggestions are. 
  // "Automated" is standard; set to "Off" if you prefer triggering via Alt+\
  "geminicodeassist.inlineSuggestions.enableAuto": true,

  // --- SAFETY & LEGAL ---

  // Prevents Gemini from suggesting code that matches existing open-source 
  // citations exactly, keeping your codebase legally safer.
  "geminicodeassist.recitation.maxCitedLength": 0,

  // --- GENERAL EDITOR TWEAKS FOR AI ---

  // Makes reading AI-generated diffs easier by ignoring whitespace noise.
  "diffEditor.ignoreTrimWhitespace": false,

  // AI writes code fast; formatting on save ensures it stays clean 
  // without you having to manually tab-shift everything.
  "editor.formatOnSave": true,

  // Bracket pair colorization helps you visually verify if the AI 
  // closed all those nested parentheses correctly.
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true
}