# Smart Document Organizer - Environment Configuration
# Copy this file to .env and update values as needed

# Deployment Environment
ENV=development

# API Authentication (leave empty to disable)
API_KEY=

# xAI / LLM Provider Configuration
XAI_API_KEY=
XAI_BASE_URL=https://api.x.ai/v1
LLM_PROVIDER=xai
LLM_MODEL=grok-4-fast-reasoning
# Optional reasoning effort for models that support reasoning controls.
# Valid values vary by model (for example: low, medium, high)
LLM_REASONING_EFFORT=medium

# Agent Feature Flags
AGENTS_ENABLE_REGISTRY=1
AGENTS_ENABLE_LEGAL_REASONING=1
AGENTS_ENABLE_ENTITY_EXTRACTOR=1
AGENTS_ENABLE_IRAC=1
AGENTS_ENABLE_TOULMIN=1

# Cache Configuration
AGENTS_CACHE_TTL_SECONDS=300

# Vector Store Configuration
VECTOR_DIMENSION=384

# Memory Management
MEMORY_APPROVAL_THRESHOLD=0.7

# Database Configuration (if using external DB)
# DATABASE_URL=sqlite:///data/app.db

# External Service URLs (if applicable)
# VECTOR_STORE_URL=
# MEMORY_STORE_URL=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# GUI Configuration
GUI_THEME=default
GUI_MAX_WORKERS=4

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Performance Settings
MAX_WORKERS=4
REQUEST_TIMEOUT_SECONDS=30

# Production startup guardrails
STRICT_PRODUCTION_STARTUP=1
REQUIRED_PRODUCTION_AGENTS=document_processor,entity_extractor,legal_reasoning,irac_analyzer
